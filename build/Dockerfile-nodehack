FROM alpine:3.11 AS nodehack
RUN apk add --update --no-cache ca-certificates
COPY build/nodehack.sh /usr/local/bin/nodehack
# Use static CoreDNS IP as default NAMESERVER
ENV HOST_PATH=/host \
 	NAMESERVER=10.96.0.10 \
	CERT_FILE=/ca-cert/ca.crt
ENTRYPOINT ["/usr/local/bin/nodehack"]
CMD ["setdns", "setca"]

# Test
FROM nodehack
ENV HOST_PATH=/mockhost \
	CERT_NAME=fakecert \
	DEBUG=x
RUN set -ex; \
	mkdir -p /ca-cert \
		$HOST_PATH/etc/ssl/certs $HOST_PATH/usr/local/share/ca-certificates \
		$HOST_PATH/etc/pki/ca-trust/source/anchors $HOST_PATH/usr/bin; \
	echo fakecertcontents > /ca-cert/ca.crt; \
	echo 'nameserver 1.1.1.1' > $HOST_PATH/etc/resolv.conf; \
	cp -r /bin /lib $HOST_PATH/; \
	echo '#!/bin/sh' > $HOST_PATH/usr/bin/update-ca-trust; \
	chmod +x $HOST_PATH/usr/bin/update-ca-trust; \
	printf '#!/bin/sh\nsleep 20' > /bin/crio; \
	chmod +x /bin/crio; \
	crio & \
	nodehack setca setdns reloadcrio; \
	ls -la $HOST_PATH/etc/ssl/certs | \
		grep -Eq ' ca-cert-registry-ca-fakecert-[0-9a-f]+\.pem -> /usr/local/share/ca-certificates/registry-ca-fakecert-'; \
	ls $HOST_PATH/usr/local/share/ca-certificates | grep -q registry-ca-fakecert-; \
	[ "$(printf 'nameserver %s\nnameserver 1.1.1.1' $NAMESERVER)" = "$(cat $HOST_PATH/etc/resolv.conf)" ]; \
	[ "$(ls -a $HOST_PATH/usr/local/share/ca-certificates | wc -l)" -eq 3 ] || (ls -la $HOST_PATH/usr/local/share/ca-certificates;false); \
	nodehack setca setdns reloadcrio; \
	[ "$(printf 'nameserver %s\nnameserver 1.1.1.1' $NAMESERVER)" = "$(cat $HOST_PATH/etc/resolv.conf)" ]; \
	[ "$(ls -a $HOST_PATH/usr/local/share/ca-certificates | wc -l)" -eq 3 ] || (ls -la $HOST_PATH/usr/local/share/ca-certificates;false)

FROM nodehack
